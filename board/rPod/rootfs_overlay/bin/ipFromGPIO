#!/bin/ash

nodeID=`/usr/bin/python /bin/detectPiID.py`

echo $nodeID
ip="192.168.0."$nodeID
command="ifconfig eth0 "$ip" netmask 255.255.255.0"
if [ $nodeID -eq 0 ]
then
        echo "Using DHCP"
        `ifconfig eth0 0.0.0.0 0.0.0.0`
        `udhcpc`
else
        echo "Setting IP to "$ip
        `$command`
fi


